<div class="modal hide fade" id="auth_modal" style="display: none;">
  <div class="modal-header" style='border: none;'>
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <ul class="nav nav-tabs" id='tab'>
      <li class="active">
        <a href="#sign_up" data-toggle="tab" id='sign_up_link'><%= I18n.t('devise.sign_up')%></a>
      </li>
      <li><a href="#sign_in" data-toggle="tab" id='sign_in_link'><%= I18n.t('devise.sign_in')%></a></li>
    </ul>
  </div>
  <div class="modal-body row tab-content" >
    <div class='tab-pane fade active in' id='sign_up'>
      <%= form_for(@person, :as => :person, :url => registration_path(:person)) do |f| %>

        <div><%= f.label I18n.t('devise.email') %><br />
        <%= f.email_field :email %></div>

        <div><%= f.label I18n.t('devise.password') %><br />
        <%= f.password_field :password %></div>

        <div><%= f.label I18n.t('devise.password_confirmation') %><br />
        <%= f.password_field :password_confirmation %></div>

        <div><%= f.submit I18n.t('devise.sign_up') %></div>
      <% end %>
    </div>
    <div class='tab-pane fade' id='sign_in'>
      <%= form_for(@person, :as => :person, :url => session_path(:person)) do |f| %>
        <div><%= f.label I18n.t('devise.email') %><br />
        <%= f.email_field :email %></div>

        <div><%= f.label I18n.t('devise.password') %><br />
        <%= f.password_field :password %></div>
        <div><%= f.check_box :remember_me %><%= f.label I18n.t('devise.remember_me') %></div>
        <div><%= f.submit I18n.t('devise.sign_in') %></div>
      <% end %>
    </div>
    
  </div>
  <div class="modal-footer">

    <div class='span5 sign_in_nav'>
      <ul class="unstyled">
        <li class='tip'>
          <%= I18n.t('or_sign_in_with')%>
        <li>
        <li class='social_oauth'>
          <span class='social_botton'>
            <%= link_to image_tag('social/weibo_24.png'), login_path(:weibo), :class => 'btn btn-large'%>
          </span>

        </li>
        <li class='social_oauth'>
          <span class='social_botton'>
            <%= link_to image_tag('social/twitter_24.png'), login_path(:twitter), :class => 'btn btn-large' %>
          </span>

        </li>
        <li class='social_oauth'>
          <span class='social_botton'>
            <%= link_to image_tag('social/facebook_24.png'), login_path(:facebook), :class => 'btn btn-large' %>
          </span>

        </li>
    </div>
  </div>
</div>

<script>
  
  $('#tab a').click(function(e){
    e.preventDefault();
    $(this).tab('show');
  })
</script>